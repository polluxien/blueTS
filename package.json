{
  "name": "blueTS",
  "displayName": "blueTS",
  "description": "",
  "publisher": "Bennet-Worrmann",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.ts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blueTS.openExtension",
        "title": "open blueTS extension",
        "icon": "$(symbol-method)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blueTS.openExtension",
          "group": "navigation",
          "when": "extHasTsFiles"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "jest src/test-jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.30.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "ts-morph": "^27.0.0",
    "uuid": "^11.1.0",
    "typescript": "^5.9.3"
  }
}
